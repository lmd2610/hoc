extend ../layouts/common
block content
    h1 Create
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="post" ).form-group
        label(for='name') Name
        input#name.form-control(type="text", name="name",value = values ? values.name: "")
        label(for='phonenumber') Phone number
        input#phonenumber.form-control(type="text", name="phone",value = values ? values.phone:'')
        br
        button.btn.btn-primary Create