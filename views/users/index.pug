extend ../layouts/common
block content
    h1 Users
    .d-flex
        a.btn.btn-primary(href ="/users/create" ) New
        form.ml-auto(action = "/users/search", method = "get")
        input(type="text", name='q')
        button.btn.btn-primary Search
        
    table.table
        tr
            th Name
            th Phone
            th Actions
        each val in users
            tr
                td=val.name
                td=val.phone    
                td
                    a.btn.btn-dark(href="/users/"+val.id) view